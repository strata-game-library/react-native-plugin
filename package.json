{
  "name": "@jbcom/strata-react-native-plugin",
  "version": "0.1.0",
  "description": "React Native plugin for Strata 3D - cross-platform input, device detection, and haptics for mobile games",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "android",
    "ios",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/"
  },
  "keywords": [
    "react-native",
    "strata",
    "input",
    "gamepad",
    "touch",
    "haptics",
    "device-detection",
    "cross-platform",
    "mobile",
    "ios",
    "android"
  ],
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/nodejs-strata-react-native-plugin"
  },
  "homepage": "https://github.com/jbcom/nodejs-strata-react-native-plugin#readme",
  "bugs": {
    "url": "https://github.com/jbcom/nodejs-strata-react-native-plugin/issues"
  },
  "peerDependencies": {
    "@jbcom/strata": ">=1.4.0",
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@types/react": "^19.0.0",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.0"
  }
}

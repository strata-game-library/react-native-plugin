{
  "name": "@jbcom/strata",
  "version": "1.4.10",
  "description": "Procedural 3D graphics library for React Three Fiber - terrain, water, vegetation, sky, volumetrics, and characters",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./shaders": {
      "types": "./dist/shaders/index.d.ts",
      "import": "./dist/shaders/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "demo": "npx serve docs/demos",
    "docs:dev": "npx serve docs",
    "docs:build": "echo 'Static docs ready in docs/'",
    "docs:typedoc": "typedoc",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/ tests/",
    "format:check": "biome format src/ tests/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "test": "vitest run",
    "test:unit": "vitest run --config tests/unit/vitest.config.ts",
    "test:integration": "vitest run --config tests/integration/vitest.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "pnpm run test:unit && pnpm run test:integration && pnpm run test:e2e",
    "prepublishOnly": "pnpm run build && pnpm run test:unit",
    "prepare": "husky",
    "triage": "tsx internal/triage/src/cli.ts",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{json,md,yml,yaml}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "keywords": [
    "strata",
    "3d-graphics",
    "procedural-generation",
    "three.js",
    "react-three-fiber",
    "r3f",
    "webgl",
    "sdf",
    "marching-cubes",
    "gpu-instancing",
    "raymarching",
    "volumetric",
    "terrain",
    "water",
    "fog",
    "vegetation",
    "fur",
    "character-animation",
    "shaders",
    "glsl"
  ],
  "author": "Jon Bogaty <jon@jonbogaty.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbcom/nodejs-strata"
  },
  "homepage": "https://github.com/jbcom/nodejs-strata#readme",
  "bugs": {
    "url": "https://github.com/jbcom/nodejs-strata/issues"
  },
  "peerDependencies": {
    "@react-three/drei": ">=9.0.0",
    "@react-three/fiber": ">=8.0.0",
    "@react-three/rapier": ">=1.0.0",
    "postprocessing": ">=6.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "three": ">=0.150.0",
    "yuka": ">=0.7.0",
    "zustand": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "yuka": {
      "optional": true
    },
    "@react-three/rapier": {
      "optional": true
    },
    "postprocessing": {
      "optional": true
    },
    "zustand": {
      "optional": true
    }
  },
  "dependencies": {
    "@types/howler": "^2.2.12",
    "@xstate/react": "^6.0.0",
    "howler": "^2.2.4",
    "immer": "^11.0.1",
    "leva": "^0.10.1",
    "maath": "^0.10.8",
    "miniplex": "^2.0.0",
    "miniplex-react": "^2.0.1",
    "ngraph.graph": "^20.1.1",
    "ngraph.path": "^1.6.1",
    "simplex-noise": "^4.0.3",
    "tunnel-rat": "^0.1.2",
    "xstate": "^5.25.0",
    "zundo": "^2.3.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@playwright/test": "^1.57.0",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "@react-three/postprocessing": "^3.0.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react": "^16.3.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@types/yuka": "^0.7.4",
    "@vitest/coverage-v8": "^4.0.15",
    "@xstate/react": "^6.0.0",
    "howler": "^2.2.4",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "maath": "^0.10.8",
    "miniplex": "^2.0.0",
    "miniplex-react": "^2.0.1",
    "ngraph.graph": "^20.1.1",
    "ngraph.path": "^1.6.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "simplex-noise": "^4.0.3",
    "three": "^0.182.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "xstate": "^5.25.0",
    "yuka": "^0.7.8"
  }
}
